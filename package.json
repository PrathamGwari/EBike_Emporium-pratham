
{
    "name": "mern-bikes",
    "version": "1.0.0",
    "description": "An E-commerce application built with the MERN stack",
    "engines": {
        "node": "16.x"
    },
    "scripts": {
        "backend-install": "npm install --prefix backend --max-old-space-size=4096",
        "backend": "npm run dev --prefix backend --max-old-space-size=4096",
        "frontend-install": "npm install --prefix frontend --max-old-space-size=4096",
        "frontend": "npm start --prefix frontend --max-old-space-size=4096",
        "frontend-build": "npm run build --prefix frontend --max-old-space-size=4096",
        "build": "npm run backend-install && npm run frontend-install && npm run frontend-build --max-old-space-size=4096"
    },
    "keywords": [],
    "author": "Nestor Vega",
    "license": "ISC",
    "dependencies": {
        "@faker-js/faker": "^8.0.2",
        "express-validator": "^7.0.1"
    }
}

